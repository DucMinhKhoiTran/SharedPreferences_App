<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:clipToPadding="false"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvLessonNumber"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#205A7A"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvLessonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson Title"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvLessonDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length: 00 min"
            android:textSize="14sp"
            android:textColor="#5d3954" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivCompletion"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_tick"
        android:visibility="gone"
        android:contentDescription="Completed"
        android:layout_marginEnd="8dp" />
</LinearLayout>
